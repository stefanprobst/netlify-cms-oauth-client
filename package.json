{
	"name": "@stefanprobst/netlify-cms-oauth-client",
	"version": "0.2.0",
	"license": "MIT",
	"type": "module",
	"exports": {
		".": "./dist/index.js"
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"engines": {
		"node": ">=18",
		"pnpm": ">=8"
	},
	"packageManager": "pnpm@8.4.0",
	"scripts": {
		"build": "tsc",
		"clean": "rm -rf dist",
		"format:check": "prettier . --cache --check --ignore-path .gitignore",
		"format:fix": "pnpm run format:check --write",
		"lint:check": "eslint . --cache --ignore-path .gitignore",
		"lint:fix": "pnpm run lint:check --fix",
		"prepare": "simple-git-hooks || exit 0",
		"prepublishOnly": "run-s validate clean build",
		"types:check": "tsc --noEmit",
		"validate": "run-s format:check lint:check types:check"
	},
	"dependencies": {
		"@stefanprobst/is-absolute-url": "^1.0.2",
		"@stefanprobst/is-nonempty-string": "^1.0.1",
		"@stefanprobst/request": "^0.2.1",
		"strip-indent": "^4.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.3",
		"@stefanprobst/commitlint-config": "^1.0.3",
		"@stefanprobst/eslint-config": "^1.1.2",
		"@stefanprobst/eslint-config-node": "^4.0.1",
		"@stefanprobst/prettier-config": "^3.0.1",
		"@stefanprobst/tsconfig-lib": "^1.0.2",
		"@types/node": "^18.16.5",
		"@vercel/node": "^2.14.1",
		"eslint": "^8.40.0",
		"lint-staged": "^13.2.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.8",
		"simple-git-hooks": "^2.8.1",
		"typescript": "^5.0.4"
	},
	"commitlint": {
		"extends": "@stefanprobst/commitlint-config"
	},
	"eslintConfig": {
		"extends": [
			"@stefanprobst/eslint-config",
			"@stefanprobst/eslint-config-node"
		]
	},
	"lint-staged": {
		"*.@(js|ts)": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*.!(js|ts)": "prettier --cache --ignore-unknown --write"
	},
	"prettier": "@stefanprobst/prettier-config",
	"simple-git-hooks": {
		"commit-msg": "pnpm exec commitlint --edit",
		"pre-commit": "pnpm exec lint-staged",
		"pre-push": "pnpm run validate"
	}
}
